#~group LookZ

#~type integer
#~views integer slider
#~range 8 36
#~help
The size of font to use for the choices in the lookz style editor.
#~endhelp
LookZFontSize: 10

#~type boolean
#~views string boolean
#~help
By default LookZ only updates the appearance of your document when you ask it too.  If this preference is changed to 'yes' then all changes will
be immediately reflected in your document.
#~endhelp
LookZAutoUpdate: no
