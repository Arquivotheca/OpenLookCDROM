CC = dcc
CFLAGS = -gs -r -ms -I.

LDLIBS = UULIB:uucp.lib

CONFIGDIR = /
UUCPINCLUDE = uucp:src/include

LOCALCFLAGS= -I$(CONFIGDIR) $(CFLAGS) -I$(UUCPINCLUDE)

SRCS = iso2022.c richlex.c richset.c richtext.c richtoatk.c usascii.c
OBJS = iso2022.o richlex.o richset.o richtext.o richtoatk.o usascii.o
APPS = richtext

# I have not bothered to port richtoatk. /JW
#all:  richtext richtoatk
all: $(APPS)

richtext: richtext.o iso2022.o richlex.o richset.o usascii.o
        $(CC) $(LOCALCFLAGS) -o %(left) %(right) $(LDLIBS)

richtoatk: richtoatk.o iso2022.o richlex.o richset.o usascii.o
        $(CC) $(LOCALCFLAGS) -o %(left) %(right) $(LDLIBS)

$(OBJS) : $(SRCS)
        $(CC) $(LOCALCFLAGS) -o %(left) %(right) -c

clean:
        -Delete $(APPS) #?.o #?.BAK
