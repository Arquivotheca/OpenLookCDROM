*message.label: Keith's Canfield, Version 1.0
*stacks.borderWidth: 0
*deck.borderWidth: 0
*piles.borderWidth: 0
*menuBar.layout: vertical { \
	5 < -5 >\
	horizontal { \
		5 < -5 > \
		fileMenuButton \
		5 < -5 > \
		newGame \
		5 < -5 > \
		undo \
		5 < -5 > \
		hint \
		5 < -5 > \
		score \
		5 < -5 > \
		pileAll \
		0 <+inf -inf> \
	} \
	5 < -5 > \
}
*frame.layout: vertical {\
	-1 \
	horizontal {\
		-1 \
		menuBar < +inff -100% * >\
		-1 \
	} \
	10 < -inf > \
	horizontal { \
		10 < -inf > \
		deck < -75% * -90% > \
		10 < +inf -inf > \
		piles < -100% * -90% > \
		10 < -inf > \
	} \
	10 < -inf > \
	stacks < -50% * +inf -50% > \
	horizontal { \
		-1 \
		message < +inff -100% * > \
		-1 \
	} \
	-1 \
}

