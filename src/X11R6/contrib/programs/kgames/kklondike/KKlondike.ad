	Shift<BtnDown>:	select(noop)\n\
	Shift<BtnUp>:	select(expand)\n\
	:<Btn1Down>:	select(stack_source)\n\
	:<BtnDown>:	select(card_source)\n\
	:<BtnUp>:	select(dest)

*piles.translations: #override \
	<BtnDown>:	select(stack_source)\n\
	<BtnUp>:	select(dest)
	
